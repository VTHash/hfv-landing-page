<audio id="introSound" src="assets/sounds/intro-sound.mp3" preload="auto"></audio>

<script>
  function enterSite() {
    const sound = document.getElementById('introSound');
    sound.volume = 0.6; // adjust volume (0 to 10)
    sound.play();

    // Redirect to main landing page after sound plays for 10s
    setTimeout(() => {
      window.location.href = "main.html";
    }, 10000); // milliseconds (adjust if needed)
  }
</script>